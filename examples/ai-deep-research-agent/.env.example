# OpenAI API key for generating queries, analyzing content, and creating reports
OPENAI_API_KEY=your-openai-api-key-here

# Ollama API key for generating queries, analyzing content, and creating reports
OLLAMA_HOST=http://localhost:11434
# Ollama model to use (defaults to llama3.1)
OLLAMA_MODEL=llama3.1

# Firecrawl API key for web search and content extraction
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# Optional: OpenAI model to use (defaults to gpt-4o)
# OPENAI_MODEL=gpt-4-turbo

# Optional: Firecrawl base URL if using a self-hosted instance
# FIRECRAWL_BASE_URL=http://your-firecrawl-instance-url 