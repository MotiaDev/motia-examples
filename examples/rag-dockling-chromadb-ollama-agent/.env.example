# Embedding Configuration
EMBEDDING_PROVIDER=ollama  # Options: openai, ollama

# Text Generation Configuration
TEXT_GENERATION_PROVIDER=ollama  # Options: openai, ollama (defaults to EMBEDDING_PROVIDER if not set)

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSION=1536
OPENAI_TEXT_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=4096

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
# Use mxbai-embed-large for 1024 dimensions (high quality)
# Use nomic-embed-text for 768 dimensions (smaller, faster)
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_EMBEDDING_DIMENSION=1024
# Text generation models: llama3.1, llama3.2, mistral, codellama, etc.
OLLAMA_TEXT_MODEL=gpt-oss:20b
OLLAMA_MAX_TOKENS=4096

# ChromaDB Configuration (for cloud deployment)
# When using Docker Compose, CHROMADB_HOST will be set automatically to chromadb
# CHROMADB_HOST=localhost
# CHROMADB_PORT=8000

# Application Configuration
NODE_ENV=development

# Optional: OpenAI Organization (if applicable)
# OPENAI_ORGANIZATION=your_openai_organization_id